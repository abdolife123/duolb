---
const {
  title = "Beauty & Wellness Directory",
  description = "",
  canonical,
  image = "https://res.cloudinary.com/dc0ax30om/image/upload/v1769795790/duolb_og_xrs8qe.png",
  type = "website",
} = Astro.props;

import Navbar from "@components/navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const canonicalURL = canonical || `https://duolb.com${Astro.url.pathname}`;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Duolb Beauty Redaktion" />
    <meta name="robots" content="index, follow, max-image-preview:large" />
    <meta name="google-adsense-account" content="ca-pub-6824827690109369" />
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6824827690109369"
      crossorigin="anonymous"
    ></script>
    <link rel="canonical" href={canonicalURL} />

    <meta name="theme-color" content="#F6F4F1" />
    <link rel="preload" href="/styles/enhancements.css" as="style" />
    <link rel="stylesheet" href="/styles/enhancements.css" media="print" onload="this.media='all'" />
    <noscript><link rel="stylesheet" href="/styles/enhancements.css" /></noscript>

    <link rel="preconnect" href="https://res.cloudinary.com" crossorigin />
    <link rel="dns-prefetch" href="https://res.cloudinary.com" />

    <!-- Open Graph -->
    <meta property="og:site_name" content="Duolb Beauty Directory" />
    <meta property="og:type" content={type} />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={image} />
    <meta property="og:image:alt" content="Duolb Directory Vorschau" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- RSS + Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="alternate" type="application/rss+xml" title="Duolb RSS Feed" href="/rss.xml" />

    {Astro.url.hostname === "duolb.pages.dev" && (
      <>
        <meta http-equiv="refresh" content={`0; url=https://duolb.com${Astro.url.pathname}`} />
      </>
    )}
  </head>

  <body class="bg-[var(--color-soft-white)] text-[var(--color-charcoal)]">

    <div class="site-frame">
      <!-- Real navbar component -->
      <Navbar />

      <!-- Main content -->
      <main class="w-full py-14">
        <slot />
      </main>

      <!-- Real footer component -->
      <Footer />
    </div>

  </body>
</html>

