---
import { supabase } from "../lib/supabase"
import SalonImage from "@components/directory/SalonImage.astro"
const { data: salons } = await supabase
  .from("salons")
  .select("salon_name, slug, cover_image, rating_value, rating_count, city_slug")
  .order("rating_value", { ascending: false })
  .limit(6)
---

<section class="py-20 px-6 bg-white rounded-3xl shadow-[var(--shadow-sm)] border border-[var(--color-light-taupe)]">
  <div class="max-w-7xl mx-auto">

    <div class="flex items-center justify-between mb-12">
      <h2 class="text-3xl font-serif text-[var(--color-deep-slate)]">
        Schönheitssalons
      </h2>
      <a href="/directory" class="text-sm text-[var(--color-terracotta)] font-semibold transition-colors hover:text-[var(--color-gentle-gold)]">
        Alle ansehen →
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {salons?.map(salon => (
        <a
          href={`/salon/${salon.slug}`}
          class="group bg-white rounded-[var(--radius-lg)] overflow-hidden shadow-[var(--shadow-sm)] transition-all duration-300 border border-[var(--color-light-taupe)] hover:-translate-y-1 hover:shadow-[var(--shadow-md)] hover:border-[var(--color-dusty-mauve)]"
        >
          <div class="h-52 overflow-hidden">
            <SalonImage
              coverImage={salon.cover_image}
              alt={salon.salon_name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>

          <div class="p-6">
            <h3 class="text-lg font-semibold text-[var(--color-deep-slate)] mb-2 transition-colors group-hover:text-[var(--color-terracotta)]">
              {salon.salon_name}
            </h3>

            <div class="text-sm text-[var(--color-gentle-gold)] font-semibold">
              ⭐ {salon.rating_value ?? "Neu"} 
              <span class="text-[var(--color-medium-gray)] ml-1 font-medium">
                ({salon.rating_count ?? 0})
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

  </div>
</section>

