<section class="relative w-full py-16 px-6 overflow-hidden">
  <!-- Soft background glow -->
  <div class="absolute -top-24 -left-24 w-72 h-72 rounded-full bg-[#D8A7B1]/10 blur-3xl"></div>
  <div class="absolute -bottom-24 -right-24 w-72 h-72 rounded-full bg-[#9CAF9A]/10 blur-3xl"></div>

  <div class="relative w-full rounded-[2rem] border border-[#EFE7E2] bg-white px-8 py-12 shadow-xl">

    <!-- Header -->
    <div class="text-center mb-8">
      <span class="inline-block mb-3 rounded-full bg-[#D8A7B1] px-5 py-2 text-xs font-semibold uppercase tracking-[0.25em] text-[#FBF6F2] shadow">
        Newsletter
      </span>

      <h2 class="text-2xl md:text-3xl lg:text-4xl font-serif text-gray-900 mb-3">
        Werde Teil unseres Schönheitskreises
      </h2>

      <p class="text-gray-600 text-sm md:text-base max-w-2xl mx-auto">
        Erhalte exklusive Schönheitstipps, neue Trends und Premium-Inhalte. Kein Spam. Nur das Gute.
      </p>
    </div>

    <!-- Form -->
    <form id="newsletter-form" class="flex flex-col md:flex-row items-center gap-4 max-w-3xl mx-auto">
      <input
        type="email"
        name="email"
        required
        placeholder="Deine E-Mail-Adresse"
        class="flex-1 w-full rounded-full border border-[#EFE7E2] bg-[#FBF6F2] px-6 py-3 text-gray-800 placeholder-gray-500 transition focus:outline-none focus:ring-2 focus:ring-[#C6A75E]/40"
      />

      <button
        type="submit"
        class="rounded-full bg-[#D8A7B1] px-8 py-3 font-semibold text-[#FBF6F2] shadow transition hover:scale-105 hover:bg-[#9CAF9A] hover:shadow-lg"
      >
        Abonnieren
      </button>
    </form>

    <!-- Message -->
    <p id="newsletter-message" class="mt-6 text-center text-sm font-medium"></p>

    <!-- Footer note -->
    <p class="mt-4 text-center text-xs text-gray-400 tracking-wide">
      Du kannst dich jederzeit wieder abmelden.
    </p>
  </div>
</section>

