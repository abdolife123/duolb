<section class="relative w-full py-16 px-6 overflow-hidden">
  <!-- Soft background glow -->
  <div class="absolute -top-24 -left-24 w-72 h-72 bg-[#958e09]/10 rounded-full blur-3xl"></div>
  <div class="absolute -bottom-24 -right-24 w-72 h-72 bg-[#ffdead]/70 rounded-full blur-3xl"></div>

  <div class="relative w-full bg-white rounded-[2rem] shadow-xl px-8 py-12 border border-[#958e09]/20">

    <!-- Header -->
    <div class="text-center mb-8">
      <span class="inline-block mb-3 px-5 py-2 rounded-full bg-[#958e09] text-white text-xs tracking-[0.25em] uppercase font-semibold shadow">
        Newsletter
      </span>

      <h2 class="text-2xl md:text-3xl lg:text-4xl font-serif text-gray-900 mb-3">
        Werde Teil unseres Schönheitskreises
      </h2>

      <p class="text-gray-600 text-sm md:text-base max-w-2xl mx-auto">
        Erhalte exklusive Schönheitstipps, neue Trends und Premium-Inhalte. Kein Spam. Nur das Gute.
      </p>
    </div>

    <!-- Form -->
    <form id="newsletter-form" class="flex flex-col md:flex-row items-center gap-4 max-w-3xl mx-auto">
      <input
        type="email"
        name="email"
        required
        placeholder="Deine E-Mail-Adresse"
        class="flex-1 w-full px-6 py-3 rounded-full border border-[#958e09]/30 bg-[#ffdead]/40 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#958e09] transition"
      />

      <button
        type="submit"
        class="px-8 py-3 rounded-full bg-[#958e09] text-white font-semibold shadow hover:shadow-lg hover:scale-105 transition"
      >
        Abonnieren
      </button>
    </form>

    <!-- Message -->
    <p id="newsletter-message" class="mt-6 text-center text-sm font-medium"></p>

    <!-- Footer note -->
    <p class="mt-4 text-center text-xs text-gray-400 tracking-wide">
      Du kannst dich jederzeit wieder abmelden.
    </p>
  </div>
</section>
