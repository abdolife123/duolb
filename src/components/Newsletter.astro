<section
  class="relative w-full flex items-center justify-center py-24 px-4 overflow-hidden"
>
  <!-- Decorative glow -->
  <div
    class="absolute -top-32 -left-32 w-96 h-96 bg-[#958e09]/10 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute -bottom-32 -right-32 w-96 h-96 bg-[#ffdead]/80 rounded-full blur-3xl"
  >
  </div>

  <div
    class="relative w-full max-w-3xl bg-white rounded-[2.5rem] shadow-2xl p-12 border border-[#958e09]/20"
  >
    <!-- Header -->
    <div class="text-center mb-10">
      <span
        class="inline-block mb-4 px-5 py-2 rounded-full bg-[#958e09] text-[#FFFFFF] text-xs tracking-[0.25em] uppercase font-semibold shadow"
      >
        Newsletter
      </span>

      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-serif text-gray-900 mb-4"
      >
        Werde Teil unseres Beauty-Kreises
      </h2>

      <p class="text-gray-600 text-base md:text-lg max-w-xl mx-auto">
        Erhalte exklusive Beauty-Tipps, neue Trends und Premium-Inhalte. Kein
        Spam. Nur das Gute.
      </p>
    </div>

    <!-- Form -->
    <form
      id="newsletter-form"
      class="flex flex-col md:flex-row items-center gap-4"
    >
      <div class="relative flex-1 w-full">
        <input
          type="email"
          name="email"
          required
          placeholder="Deine E-Mail-Adresse"
          class="w-full px-7 py-4 rounded-full border border-[#958e09]/30 bg-[#ffdead]/40 text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#958e09] focus:border-transparent transition"
        />
      </div>

      <button
        type="submit"
        class="px-10 py-4 rounded-full bg-[#958e09] text-[#FFFFFF] font-semibold tracking-wide shadow-lg hover:shadow-xl hover:scale-105 active:scale-100 transition"
      >
        Abonnieren
      </button>
    </form>

    <!-- Message -->
    <p id="newsletter-message" class="mt-8 text-center text-sm font-medium"></p>

    <!-- Footer note -->
    <p class="mt-6 text-center text-xs text-gray-400 tracking-wide">
      Du kannst dich jederzeit wieder abmelden.
    </p>
  </div>
</section>

<script>
  const form = document.getElementById("newsletter-form");
  const message = document.getElementById("newsletter-message");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    message.textContent = "Wird abonniert...";
    message.className = "mt-8 text-center text-sm font-medium text-gray-600";

    const formData = new FormData(form);
    const email = formData.get("email");

    try {
      const res = await fetch("/api/newsletter", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email }),
      });

      const data = await res.json();

      if (res.ok) {
        message.textContent = "Geschafft! Willkommen in unserer Beauty-Welt.";
        message.className =
          "mt-8 text-center text-sm font-medium text-green-700";
        form.reset();
      } else {
        message.textContent = data.error || "Etwas ist schiefgelaufen.";
        message.className = "mt-8 text-center text-sm font-medium text-red-600";
      }
    } catch (err) {
      message.textContent = "Serverfehler. Bitte sp√§ter erneut versuchen.";
      message.className = "mt-8 text-center text-sm font-medium text-red-600";
    }
  });
</script>
