---
// Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-[#958e09]/10 pt-16 pb-8">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col items-center">
      <div class="mb-8">
        <a
          href="/"
          class="text-3xl font-serif tracking-tighter text-gray-900 group"
        >
          duolb<span class="text-[#958e09] group-hover:animate-pulse">.</span>
        </a>
      </div>

      <nav class="flex flex-wrap justify-center gap-x-8 gap-y-4 mb-12">
        {
          [
            { name: "Über uns", href: "/about" },
            { name: "Kontakt", href: "/contact" },
            { name: "Impressum", href: "/impressum" },
            { name: "Datenschutz", href: "/datenschutz" },
          ].map((link) => (
            <a
              href={link.href}
              class="text-xs uppercase tracking-[0.2em] font-bold text-gray-500 hover:text-[#958e09] transition-colors"
            >
              {link.name}
            </a>
          ))
        }
      </nav>

      <div
        class="w-full max-w-xs h-px bg-gradient-to-r from-transparent via-[#958e09]/30 to-transparent mb-8"
      >
      </div>

      <div class="flex gap-6 mb-8">
        <span
          class="text-gray-400 hover:text-[#958e09] transition-transform hover:-translate-y-1 cursor-pointer"
          >Instagram</span
        >
        <span
          class="text-gray-400 hover:text-[#958e09] transition-transform hover:-translate-y-1 cursor-pointer"
          >Pinterest</span
        >
      </div>

      <div class="text-center">
        <p
          class="text-[10px] text-gray-400 uppercase tracking-widest leading-loose"
        >
          © {currentYear} duolb Beauty Blog <br class="md:hidden" />
          <span class="hidden md:inline mx-2">•</span>
          Deutschland
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Verwendet die Serif-Schriftart für das Logo */
  .font-serif {
    font-family: "Cormorant Garamond", serif;
  }
</style>
