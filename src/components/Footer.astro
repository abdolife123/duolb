---
// Footer.astro
const currentYear = new Date().getFullYear();
---

<footer class="border-t border-[#EFE7E2] bg-[#F3ECE8] pt-20 pb-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col items-center">
      <div class="mb-8">
        <a
          href="/"
          class="text-3xl font-serif tracking-[0.04em] text-gray-900 group"
        >
          duolb<span class="text-[#C6A75E] group-hover:animate-pulse">.</span>
        </a>
      </div>

      <nav class="flex flex-wrap justify-center gap-x-8 gap-y-4 mb-12">
        {
          [
            { name: "Über uns", href: "/about" },
            { name: "Kontakt", href: "/contact" },
            { name: "Impressum", href: "/impressum" },
            { name: "Datenschutz", href: "/datenschutz" },
          ].map((link) => (
            <a
              href={link.href}
              class="nav-link text-xs font-medium uppercase tracking-[0.2em] text-gray-500 hover:text-[#C6A75E] transition-colors"
            >
              {link.name}
            </a>
          ))
        }
      </nav>

      <div
        class="mb-8 h-px w-full max-w-xs bg-gradient-to-r from-transparent via-[#C6A75E]/40 to-transparent"
      >
      </div>

      <div class="flex gap-6 mb-8">
        <span
          class="text-gray-400 hover:text-[#C6A75E] transition-transform hover:-translate-y-1 cursor-pointer"
          >Instagram</span
        >
        <span
          class="text-gray-400 hover:text-[#C6A75E] transition-transform hover:-translate-y-1 cursor-pointer"
          >Pinterest</span
        >
      </div>

      <div class="text-center">
        <p
          class="text-[10px] text-gray-400 uppercase tracking-widest leading-loose"
        >
          © {currentYear} duolb Schönheitsblog <br class="md:hidden" />
          <span class="hidden md:inline mx-2">•</span>
          Deutschland
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Verwendet die Serif-Schriftart für das Logo */
  .font-serif {
    font-family: "Cormorant Garamond", serif;
  }
</style>

