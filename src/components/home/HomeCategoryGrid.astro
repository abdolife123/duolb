---
type CategoryLink = { name: string; slug: string };

interface Props {
  categories: CategoryLink[];
}

const { categories } = Astro.props;
---

<section class="mt-16" aria-labelledby="home-categories">
  <div class="flex items-center justify-between gap-3">
    <div>
      <h2 id="home-categories" class="text-2xl md:text-3xl font-serif text-slate-900">
        Beliebte Kategorien
      </h2>
      <p class="mt-2 text-sm text-slate-600 max-w-2xl">
        Schnell zu den häufigsten Beauty- und Wellness-Services. Jede Kategorie führt direkt zu passenden Anbietern.
      </p>
    </div>
    <a
      href="/directory/category"
      class="inline-flex items-center justify-center rounded-xl border border-[var(--color-light-taupe)] bg-[var(--color-warm-cream)] px-4 py-2 text-sm font-semibold text-[var(--color-deep-slate)] shadow-[var(--shadow-sm)] transition-all hover:-translate-y-0.5 hover:border-[var(--color-gentle-gold)] hover:text-[var(--color-terracotta)] hover:shadow-[var(--shadow-md)] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[var(--color-gentle-gold)]"
    >
      Alle Kategorien ansehen
    </a>
  </div>

  <ul class="mt-8 grid grid-cols-2 gap-4 md:grid-cols-4" role="list">
    {categories.map((cat) => (
      <li>
        <a
          href={`/directory/category/${cat.slug}`}
          class="group block rounded-[var(--radius-lg)] border border-[var(--color-light-taupe)] bg-[var(--color-warm-cream)] p-5 shadow-[var(--shadow-sm)] transition hover:border-[var(--color-gentle-gold)] hover:shadow-[var(--shadow-md)]"
        >
          <div class="flex items-center justify-between">
            <span class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">
              Kategorie
            </span>
            <span aria-hidden="true" class="text-lg text-[var(--color-gentle-gold)]">→</span>
          </div>
          <h3 class="mt-3 text-base font-semibold text-slate-900 transition-colors group-hover:text-[var(--color-terracotta)]">
            {cat.name}
          </h3>
          <p class="mt-2 text-xs text-slate-500">
            Anbieter vergleichen
          </p>
        </a>
      </li>
    ))}
  </ul>
</section>
