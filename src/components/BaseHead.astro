---
// Global styles
import '../styles/global.css';

import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';


interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const { title, description, image = FallbackImage } = Astro.props;
const safeDescription =
  typeof description === "string" && description.trim().length > 0
    ? description
    : title.slice(0, 155);

// Correct canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageURL = new URL(image.src, Astro.site).toString();
---

<!-- Basic Meta -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="preload" href="/styles/enhancements.css" as="style" />
<link rel="stylesheet" href="/styles/enhancements.css" media="print" onload="this.media='all'" />
<noscript><link rel="stylesheet" href="/styles/enhancements.css" /></noscript>

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />

<link rel="canonical" href={canonicalURL} />

<!-- SEO Meta -->
<title>{title}</title>
{safeDescription && <meta name="description" content={safeDescription} />}
<meta name="keywords" content="Beauty Blog, Hautpflege, Skincare, Make-up, Kosmetik, Beauty Trends, Deutschland" />
<meta name="author" content="duolb" />
<meta name="publisher" content="duolb" />
<meta name="msvalidate.01" content="B67B9187875C803F521B956542758582" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="duolb" />
<meta property="og:title" content={title} />
{safeDescription && <meta property="og:description" content={safeDescription} />}
<meta property="og:url" content={canonicalURL} />
<meta property="og:image" content={imageURL} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
{safeDescription && <meta name="twitter:description" content={safeDescription} />}
<meta name="twitter:image" content={imageURL} />

<!-- RSS + Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />

