---
// Global styles
import '../styles/global.css';

import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';


interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const { title, description, image = FallbackImage } = Astro.props;

// Correct canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const fullURL = Astro.url.toString();
const imageURL = new URL(image.src, Astro.site).toString();
---

<!-- Basic Meta -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />

<link rel="canonical" href={canonicalURL} />

<!-- SEO Meta -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="keywords" content="Beauty Blog, Hautpflege, Skincare, Make-up, Kosmetik, Beauty Trends, Deutschland" />
<meta name="author" content="duolb" />
<meta name="publisher" content="duolb" />
<meta name="robots" content="index, follow" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="duolb" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={fullURL} />
<meta property="og:image" content={imageURL} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL} />

<!-- RSS + Sitemap -->
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href="/rss.xml" />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />

