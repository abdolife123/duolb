---
import DirectoryFilterBar from "@components/directory/DirectoryFilterBar.astro"
import SalonImage from "@components/directory/SalonImage.astro"
import DirectoryLayout from "../../layouts/DirectoryLayout.astro"
import { supabase } from "../../lib/supabase"

const url = new URL(Astro.request.url)
const citySlug = url.searchParams.get("city")
const categorySlug = url.searchParams.get("category")
const rating = url.searchParams.get("rating")
const hasFilters = citySlug || categorySlug || rating

// Categories
const { data: categories } = await supabase
  .from("business_categories")
  .select("name, slug")
  .order("name")
  .limit(11)

// Cities
const { data: cities } = await supabase
  .from("cities")
  .select("name, slug")
  .order("salon_count", { ascending: false })
  .limit(12)

let salons = []

if (hasFilters) {
  let query = supabase
    .from("salons")
    .select("salon_name, slug, cover_image, rating_value, rating_count, full_address")

  if (citySlug) {
    const { data: city } = await supabase.from("cities").select("id").eq("slug", citySlug).single()
    if (city) query = query.eq("city_id", city.id)
  }

  if (categorySlug) {
    const { data: cat } = await supabase
      .from("business_categories")
      .select("id")
      .eq("slug", categorySlug)
      .single()
    if (cat) query = query.eq("category_id", cat.id)
  }

  if (rating) query = query.gte("rating_value", Number(rating))

  const { data } = await query.order("rating_value", { ascending: false }).limit(24)
  salons = data || []

} else {
  const { data } = await supabase
    .from("salons")
    .select("salon_name, slug, cover_image, rating_value, rating_count, full_address")
    .order("rating_value", { ascending: false })
    .limit(9)

  salons = data || []
}

// SEO
const title = "Beauty & Wellness Verzeichnis Deutschland – Top Salons & Studios finden"
const description = "Finde die besten Friseure, Kosmetikstudios, Nagelstudios und Wellnessanbieter in ganz Deutschland. Bewertungen, Preise und Standorte vergleichen."

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=600, stale-while-revalidate=86400"
)
Astro.response.headers.set("Content-Type", "text/html; charset=utf-8")

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: (salons || []).map((salon, index) => ({
    "@type": "ListItem",
    position: index + 1,
    url: `https://duolb.com/salon/${salon.slug}`,
    name: salon.salon_name,
  })),
}
---

<head>
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
</head>

<DirectoryLayout
  title={title}
  description={description}
  canonical="https://duolb.com/directory"
>

  {/* HERO */}
  <section class="bg-[#FBF6F2] py-20 px-6 text-center rounded-3xl">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-serif text-[#C6A75E] mb-6">
        Deutschlands großes Verzeichnis für Schönheit & Wellness
      </h1>
      <p class="text-lg text-[#C6A75E]/80 mb-10 italic">
        Finde Friseure, Kosmetikstudios, Massagen, Nagelstudios und mehr in deiner Stadt.
      </p>
    </div>
  </section>

  <DirectoryFilterBar cities={cities} categories={categories} />

  {/* CATEGORY LINKS */}
  {!hasFilters && (
    <section class="py-20 px-6">
      <div class="max-w-5xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-serif text-[#C6A75E]">
          Beliebte Schönheitskategorien
        </h2>
        <p class="text-[#C6A75E]/70 mt-3">
          11 handverlesene Kategorien, um schneller die passenden Salons zu finden.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {categories?.map((cat, index) => (
          <a
            href={`/directory/category/${cat.slug}`}
            class="group relative overflow-hidden rounded-3xl border border-[#FBF6F2] bg-white p-7 text-left shadow-sm transition-all hover:-translate-y-1 hover:shadow-lg"
            style={`background: linear-gradient(135deg, rgba(255,222,173,0.35), rgba(255,255,255,0.95));`}
          >
            <div class="flex items-center justify-between">
              <span class="text-xs tracking-[0.2em] text-[#C6A75E]/70">TOP {index + 1}</span>
              <span class="text-2xl">✨</span>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-gray-800 group-hover:text-[#C6A75E]">
              {cat.name}
            </h3>
            <p class="mt-2 text-sm text-gray-500">
              Entdecke die besten Anbieter in dieser Kategorie.
            </p>
            <div class="mt-6 inline-flex items-center gap-2 text-sm font-semibold text-[#C6A75E]">
              Kategorie ansehen
              <span class="text-base transition-transform group-hover:translate-x-1">→</span>
            </div>
          </a>
        ))}
      </div>
      <div class="mt-10 text-center">
        <a
          href="/directory/category"
          class="inline-flex items-center gap-2 rounded-full border border-[#C6A75E] px-6 py-2 text-sm font-semibold text-[#C6A75E] transition-colors hover:bg-[#C6A75E] hover:text-white"
        >
          Alle Kategorien ansehen
        </a>
      </div>
    </section>
  )}

  {/* CITY LINKS */}
  {!hasFilters && (
    <section class="bg-[#FBF6F2]/30 py-20 px-6 rounded-3xl">
      <h2 class="text-3xl font-serif mb-12 text-center text-[#C6A75E]">Top Städte</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {cities?.map(city => (
          <a href={`/directory/city/${city.slug}`} class="bg-white p-6 rounded-2xl shadow-sm hover:ring-1 hover:ring-[#C6A75E] transition-all">
            <span class="text-[#C6A75E] font-semibold">{city.name}</span>
          </a>
        ))}
      </div>
    </section>
  )}

  {/* SALON RESULTS */}
  <section class="py-20 px-6">
    <h2 class="text-3xl font-serif text-center mb-12 text-[#C6A75E]">
      {hasFilters ? "Suchergebnisse" : "Empfohlene Salons"}
    </h2>

    {salons.length === 0 && hasFilters && (
      <p class="text-center text-gray-500 mb-10">Keine Salons gefunden.</p>
    )}

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {salons?.map(salon => (
        <a href={`/salon/${salon.slug}`} class="bg-white rounded-3xl overflow-hidden shadow-lg border border-gray-50 group">
          <div class="h-48 bg-gray-200 overflow-hidden">
            <SalonImage
              coverImage={salon.cover_image}
              alt={salon.salon_name}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="p-6 text-left">
            <div class="flex text-[#C6A75E] mb-2 text-sm">
              ⭐ {salon.rating_value ?? "–"} <span class="text-gray-400 ml-2">({salon.rating_count ?? 0})</span>
            </div>
            <h3 class="text-xl font-bold mb-1">{salon.salon_name}</h3>
            <p class="text-gray-500 text-sm mb-4">{salon.full_address}</p>
            <div class="py-3 rounded-xl border border-[#C6A75E] text-center text-[#C6A75E] font-semibold group-hover:bg-[#C6A75E] group-hover:text-white transition-colors">
              Details ansehen
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  {/* SEO TEXT BLOCK */}
  {!hasFilters && (
    <section class="py-20 px-6 border-t border-[#FBF6F2] max-w-5xl mx-auto prose">
      <h2>Anbieter für Schönheit & Wellness in Deutschland finden</h2>
      <p>
        Unser Verzeichnis hilft dir, schnell und einfach professionelle Anbieter für Schönheit und Wellness in ganz Deutschland zu finden. Ob Friseur, Kosmetikstudio, Massagepraxis oder Nagelstudio – hier kannst du Bewertungen vergleichen, Standorte entdecken und passende Anbieter in deiner Stadt auswählen.
      </p>

      <h2>Warum dieses Verzeichnis nutzen?</h2>
      <ul>
        <li>Große Auswahl an geprüften Salons</li>
        <li>Bewertungen zur besseren Entscheidung</li>
        <li>Standorte in vielen deutschen Städten</li>
        <li>Schnelle Suche nach Kategorie oder Stadt</li>
      </ul>

      <p>
        <a href="/directory/city">Alle Städte ansehen</a> ·{" "}
        <a href="/directory/category">Alle Kategorien ansehen</a>
      </p>
    </section>
  )}

</DirectoryLayout>



