---
import DirectoryLayout from "../../../layouts/DirectoryLayout.astro"
import { supabase } from "../../../lib/supabase"

const { data: categories, error: categoriesError } = await supabase
  .from("business_categories")
  .select("name, slug")
  .order("name")
  .limit(200)

if (categoriesError) {
  console.error("directory/category index query error:", categoriesError)
}

const title = "Beauty Kategorien – Salons nach Kategorie finden"
const description =
  "Entdecke Beauty- und Wellness-Kategorien in Deutschland. Finde Friseure, Kosmetikstudios, Nagelstudios und mehr nach Kategorie."

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=600, stale-while-revalidate=86400"
)

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: (categories || []).map((category, index) => ({
    "@type": "ListItem",
    position: index + 1,
    url: `https://duolb.com/directory/category/${category.slug}`,
    name: category.name,
  })),
}
---

<head>
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
</head>

<DirectoryLayout
  title={title}
  description={description}
  canonical="https://duolb.com/directory/category"
>
  <section class="bg-[var(--color-warm-cream)] py-16 px-6 text-center rounded-3xl border border-[var(--color-light-taupe)] shadow-[var(--shadow-sm)] mb-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-serif text-[var(--color-deep-slate)] mb-4">
        Schönheitskategorien
      </h1>
      <p class="text-lg text-[var(--color-medium-gray)] mb-2 italic">
        Wähle eine Kategorie und finde die passenden Salons in ganz Deutschland.
      </p>
    </div>
  </section>

  <section class="py-6 px-6">
    <h2 class="text-2xl md:text-3xl font-serif text-center mb-10 text-[var(--color-deep-slate)]">
      Beliebte Kategorien
    </h2>

    {(!categories || categories.length === 0) && (
      <p class="text-center text-gray-500">Keine Kategorien gefunden.</p>
    )}

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {categories?.map((category) => (
        <a
          href={`/directory/category/${category.slug}`}
          class="group p-8 bg-white border border-[var(--color-light-taupe)] rounded-[var(--radius-lg)] shadow-[var(--shadow-sm)] hover:shadow-[var(--shadow-md)] hover:border-[var(--color-gentle-gold)] transition-all text-center hover:-translate-y-1"
        >
          <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">✨</div>
          <span class="font-medium text-[var(--color-deep-slate)] group-hover:text-[var(--color-terracotta)] transition-colors">
            {category.name}
          </span>
        </a>
      ))}
    </div>
  </section>

  <section class="py-16 px-6 border-t border-[rgba(230,226,221,0.2)] max-w-5xl mx-auto prose">
    <h2>Schönheit & Wellness nach Kategorie</h2>
    <p>
      Durchstöbere Kategorien wie Friseur, Kosmetik, Nägel oder Massage und
      entdecke die besten Anbieter in Deutschland. Vergleiche Bewertungen,
      Leistungen und Standorte, um schnell den richtigen Salon zu finden.
    </p>
    <p>
      <a href="/directory/city">Alle Städte ansehen</a> ·{" "}
      <a href="/directory">Zum Verzeichnis</a>
    </p>
  </section>
</DirectoryLayout>


