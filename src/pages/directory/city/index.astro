---
import DirectoryLayout from "../../../layouts/DirectoryLayout.astro"
import { supabase } from "../../../lib/supabase"

const { data: cities } = await supabase
  .from("cities")
  .select("name, slug, salon_count")
  .gt("salon_count", 0)
  .order("salon_count", { ascending: false })
  .limit(200)

const title = "Salons nach Stadt – Beauty & Wellness Verzeichnis"
const description =
  "Finde die besten Beauty- und Wellness-Salons nach Stadt in Deutschland. Vergleiche Bewertungen, Standorte und Angebote in deiner Nähe."

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=600, stale-while-revalidate=86400"
)

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: (cities || []).map((city, index) => ({
    "@type": "ListItem",
    position: index + 1,
    url: `https://duolb.com/directory/city/${city.slug}`,
    name: city.name,
  })),
}
---

<head>
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} />
</head>

<DirectoryLayout
  title={title}
  description={description}
  canonical="https://duolb.com/directory/city"
>
  <section class="bg-[var(--color-warm-cream)] py-16 px-6 text-center rounded-3xl border border-[var(--color-light-taupe)] shadow-[var(--shadow-sm)] mb-12">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-serif text-[var(--color-deep-slate)] mb-4">
        Salons nach Stadt
      </h1>
      <p class="text-lg text-[var(--color-medium-gray)] mb-2 italic">
        Entdecke die beliebtesten Städte und finde Salons in deiner Nähe.
      </p>
    </div>
  </section>

  <section class="py-6 px-6">
    <h2 class="text-2xl md:text-3xl font-serif text-center mb-10 text-[var(--color-deep-slate)]">
      Top Städte in Deutschland
    </h2>

    {(!cities || cities.length === 0) && (
      <p class="text-center text-gray-500">Keine Städte gefunden.</p>
    )}

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {cities?.map((city) => (
        <a
          href={`/directory/city/${city.slug}`}
          class="bg-white p-6 rounded-[var(--radius-lg)] border border-[var(--color-light-taupe)] shadow-[var(--shadow-sm)] transition-all hover:-translate-y-1 hover:border-[var(--color-gentle-gold)] hover:shadow-[var(--shadow-md)]"
        >
          <div class="text-[var(--color-deep-slate)] font-semibold">{city.name}</div>
          <div class="text-sm text-[var(--color-medium-gray)] mt-1">
            {city.salon_count ?? 0} Salons
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="py-16 px-6 border-t border-[rgba(230,226,221,0.2)] max-w-5xl mx-auto prose">
    <h2>Salons für Schönheit & Wellness nach Stadt finden</h2>
    <p>
      Wähle eine Stadt, um die besten Salons, Studios und Wellnessanbieter vor Ort
      zu entdecken. Vergleiche Bewertungen, Leistungen und Standorte, um den
      passenden Anbieter zu finden.
    </p>
    <p>
      <a href="/directory/category">Alle Kategorien ansehen</a> ·{" "}
      <a href="/directory">Zum Verzeichnis</a>
    </p>
  </section>
</DirectoryLayout>

