---
import Layout from "../layouts/Layout.astro";

const title = "404 | Page Not Found";
const description = "The page you are looking for does not exist or has been moved.";
---

<Layout title={title} description={description} robots="noindex, nofollow">
  <main class="not-found-wrap">
    <div class="bg-layer" aria-hidden="true">
      <div class="blob blob-a"></div>
      <div class="blob blob-b"></div>
      <div class="grid-overlay"></div>
    </div>

    <section class="card-soft not-found-card">
      <p class="eyebrow">Duolb</p>
      <h1>404</h1>
      <p class="lead">This page could not be found.</p>
      <p class="sub">
        The link may be outdated, or the page was moved to a new location.
      </p>

      <div class="actions">
        <a class="btn btn-primary" href="/">Go to homepage</a>
        <a class="btn btn-secondary" href="/directory">Open directory</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .not-found-wrap {
    position: relative;
    isolation: isolate;
    width: min(1100px, calc(100% - 2rem));
    margin-inline: auto;
    padding: clamp(2rem, 5vw, 4rem) 0 clamp(3rem, 6vw, 5rem);
  }

  .bg-layer {
    position: absolute;
    inset: 0;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    border-radius: 999px;
    filter: blur(4px);
    opacity: 0.8;
  }

  .blob-a {
    width: min(40vw, 480px);
    height: min(40vw, 480px);
    background: radial-gradient(circle at 30% 30%, rgba(149, 142, 9, 0.35), rgba(149, 142, 9, 0));
    top: -10%;
    left: -8%;
  }

  .blob-b {
    width: min(36vw, 420px);
    height: min(36vw, 420px);
    background: radial-gradient(circle at 30% 30%, rgba(255, 222, 173, 0.7), rgba(255, 222, 173, 0));
    right: -8%;
    bottom: -20%;
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(149, 142, 9, 0.08) 1px, transparent 1px),
      linear-gradient(90deg, rgba(149, 142, 9, 0.08) 1px, transparent 1px);
    background-size: 44px 44px;
    mask-image: radial-gradient(circle at center, black 35%, transparent 85%);
    opacity: 0.45;
  }

  .not-found-card {
    border: 1px solid rgba(149, 142, 9, 0.24);
    border-radius: 32px;
    padding: clamp(2rem, 6vw, 4rem);
    text-align: center;
    max-width: 760px;
    margin-inline: auto;
    background: linear-gradient(
      165deg,
      rgba(255, 255, 255, 0.94) 0%,
      rgba(255, 248, 232, 0.92) 55%,
      rgba(255, 255, 255, 0.95) 100%
    );
    box-shadow:
      0 24px 70px rgba(149, 142, 9, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.75);
  }

  .eyebrow {
    margin: 0 0 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.78rem;
    color: rgba(149, 142, 9, 0.96);
    font-weight: 700;
  }

  h1 {
    margin: 0;
    font-size: clamp(4.2rem, 14vw, 8rem);
    line-height: 0.95;
    color: #5d5700;
    text-shadow: 0 10px 26px rgba(149, 142, 9, 0.22);
  }

  .lead {
    margin: 1.1rem 0 0;
    font-size: clamp(1.2rem, 2.6vw, 1.7rem);
    color: rgb(var(--ink));
    font-weight: 600;
  }

  .sub {
    margin: 0.9rem auto 0;
    max-width: 56ch;
    font-size: 1.03rem;
    color: rgb(var(--slate));
    line-height: 1.65;
  }

  .actions {
    margin-top: 2rem;
    display: flex;
    gap: 0.85rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 190px;
    border-radius: 999px;
    padding: 0.72rem 1.35rem;
    font-weight: 700;
    font-size: 0.95rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
    text-decoration: none;
  }

  .btn:hover {
    text-decoration: none;
    transform: translateY(-1px);
  }

  .btn-primary {
    color: #fff;
    background: linear-gradient(135deg, rgba(149, 142, 9, 0.96), rgba(107, 101, 0, 0.96));
    box-shadow: 0 10px 24px rgba(149, 142, 9, 0.28);
  }

  .btn-primary:hover {
    box-shadow: 0 14px 28px rgba(149, 142, 9, 0.36);
  }

  .btn-secondary {
    color: #665f00;
    background: rgba(255, 255, 255, 0.78);
    border: 1px solid rgba(149, 142, 9, 0.28);
  }

  .btn-secondary:hover {
    background: rgba(255, 252, 242, 0.96);
    box-shadow: 0 10px 24px rgba(149, 142, 9, 0.16);
  }

  @media (max-width: 768px) {
    .not-found-wrap {
      width: min(100%, calc(100% - 1.25rem));
      padding-top: 1.4rem;
    }

    .not-found-card {
      border-radius: 24px;
    }

    .actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: min(100%, 340px);
    }
  }
</style>
