---
import BaseHead from '../../components/BaseHead.astro';
import Navbar from '../../components/navbar.astro';
import Footer from '../../components/Footer.astro';
import { supabase } from '../../lib/supabase';

export const prerender = false;

/* ---------------- SLUG NORMALIZATION ---------------- */
function normalizeSlug(str = "") {
  return decodeURIComponent(str)
    .toLowerCase()
    .trim()
    .replace(/[\u2010-\u2015]/g, "-") // normalize weird dashes
    .replace(/\s+/g, "-");           // spaces to hyphens
}

const rawSlug = Astro.params.slug || "";
const decodedSlug = normalizeSlug(rawSlug);

/* ---------------- FETCH POST ---------------- */
const { data: post, error } = await supabase
  .from('posts')
  .select(`
    title,
    slug,
    description,
    featured_image,
    content_blocks,
    status
  `)
  .ilike('slug', decodedSlug)
  .limit(1)
  .maybeSingle();

/* ---------------- DEBUG LOGS (CHECK TERMINAL) ---------------- */
console.log("URL slug:", rawSlug);
console.log("Normalized slug:", decodedSlug);
console.log("DB post:", post);
console.log("DB error:", error);

/* ---------------- 404 HANDLING ---------------- */
if (!post) {
  return Astro.redirect('/404');
}

/* ---------------- META ---------------- */
const pageURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageURL = post.featured_image || 'https://duolb.com/default-og.jpg';
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <BaseHead title={post.title} description={post.description} />
    <link rel="canonical" href={pageURL} />

    <meta property="og:type" content="article" />
    <meta property="og:title" content={post.title} />
    <meta property="og:description" content={post.description} />
    <meta property="og:url" content={pageURL} />
    <meta property="og:image" content={imageURL} />
  </head>

  <body>
    <Navbar />

    <main class="post-container">
      {post.featured_image && (
        <div class="post-hero">
          <img src={post.featured_image} alt={post.title} />
        </div>
      )}

      <article class="post-article">
        <h1 class="post-title">{post.title}</h1>
        <div class="post-content" set:html={post.content_blocks} />
      </article>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* ================= HERO IMAGE ================= */
  .post-hero {
    width: 100%;
    max-width: 1400px;
    margin: 3rem auto 2rem auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: center; /* centers the image */
  }

  .post-hero img {
    width: 100%;
    max-width: 1100px; /* keeps it elegant on big screens */
    height: 500px;
    object-fit: cover;
    border-radius: 28px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    display: block;
  }

  /* Soft gradient glow behind hero for premium feel */
  .post-hero::before {
    content: "";
    position: absolute;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(149,142,9,0.15) 0%, rgba(255,255,255,0) 70%);
    filter: blur(60px);
    z-index: -1;
    top: 10%;
  }

  /* ================= ARTICLE CONTAINER ================= */
  .post-article {
    max-width: 1020px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem 1.5rem;
  }

  /* ================= TITLE ================= */
  .post-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 900;
    color: #111;
    text-align: center;
    line-height: 1.1;
    margin: 2.5rem 0 3rem 0;
    letter-spacing: -0.02em;
  }

  .post-title::after {
    content: "";
    display: block;
    width: 90px;
    height: 6px;
    background: linear-gradient(90deg, #958e09, #c9c24d);
    margin: 1.5rem auto 0;
    border-radius: 10px;
  }

  /* ================= CONTENT TYPOGRAPHY ================= */
  .post-content {
    font-size: 1.15rem;
    line-height: 1.9;
    color: #333;
  }

  .post-content p {
    margin-bottom: 1.6rem;
  }

  .post-content h2,
  .post-content h3 {
    font-weight: 800;
    margin-top: 3rem;
    margin-bottom: 1.2rem;
    line-height: 1.3;
  }

  .post-content img {
    width: 100%;
    border-radius: 18px;
    margin: 2.5rem 0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  }

  /* ================= MOBILE ================= */
  @media (max-width: 768px) {
    .post-hero img {
      height: 260px;
      border-radius: 20px;
    }

    .post-article {
      padding: 0 1.2rem 3rem 1.2rem;
    }
  }
</style>
