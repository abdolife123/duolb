---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import { supabase } from "../../lib/supabase";

export const prerender = false;

/* ---------------- SLUG NORMALIZATION ---------------- */
function normalizeSlug(str = "") {
  return decodeURIComponent(str)
    .toLowerCase()
    .trim()
    .replace(/[\u2010-\u2015]/g, "-")
    .replace(/\s+/g, "-");
}

const rawSlug = Astro.params.slug || "";
const decodedSlug = normalizeSlug(rawSlug);

/* ---------------- FETCH POST ---------------- */
const { data: post, error } = await supabase
  .from("posts")
  .select(`
    title,
    slug,
    description,
    featured_image,
    content_blocks,
    created_at,
    updated_at,
    status
  `)
  .ilike("slug", decodedSlug)
  .eq("status", "published")
  .limit(1)
  .maybeSingle();

/* ---------------- 404 ---------------- */
if (!post || error) {
  return Astro.redirect("/404");
}

/* ---------------- META ---------------- */
const pageURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageURL = post.featured_image || "https://duolb.com/default-og.jpg";
---

<Layout title={post.title} description={post.description} image={imageURL}>

  {/* ================== STRUCTURED DATA ================== */}

  <!-- Article Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": post.description,
    "image": imageURL,
    "author": {
      "@type": "Organization",
      "name": "Duolb Editorial"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Duolb",
      "logo": {
        "@type": "ImageObject",
        "url": "https://duolb.com/logo.png"
      }
    },
    "mainEntityOfPage": pageURL,
    "datePublished": post.created_at,
    "dateModified": post.updated_at || post.created_at
  })} />

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Startseite",
        "item": "https://duolb.com/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "https://duolb.com/posts"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": post.title,
        "item": pageURL
      }
    ]
  })} />

  {/* ================== VISIBLE PAGE ================== */}

  <main class="max-w-4xl mx-auto px-6 lg:px-8">

    {post.featured_image && (
      <div class="post-hero mb-10">
        <img
          src={post.featured_image}
          alt={post.title}
          class="w-full h-auto rounded-2xl shadow-sm"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    )}

    <article class="post-article prose prose-lg max-w-none">

      <header class="mb-10 text-center">
        <h1 class="post-title">{post.title}</h1>

        {post.description && (
          <p class="text-xl text-gray-500 mt-4">
            {post.description}
          </p>
        )}

        <div class="text-sm text-gray-400 mt-4">
          <span>Von Duolb Redaktion</span>
          <span class="mx-2">â€¢</span>
          <time datetime={post.created_at}>
            {new Date(post.created_at).toLocaleDateString("de-DE")}
          </time>
        </div>
      </header>

      <div class="post-content" set:html={post.content_blocks} />

    </article>

  </main>

  <Footer />

</Layout>

<style is:global>
  .post-hero {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .post-title {
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .post-content img {
    width: 100%;
    border-radius: 18px;
    margin: 2.5rem 0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  }
</style>
