

---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import { supabase } from "../../lib/supabase";

export const prerender = false;

/* ---------------- SLUG NORMALIZATION ---------------- */
function normalizeSlug(str = "") {
  return decodeURIComponent(str)
    .toLowerCase()
    .trim()
    .replace(/[\u2010-\u2015]/g, "-")
    .replace(/\s+/g, "-");
}

const rawSlug = Astro.params.slug || "";
const decodedSlug = normalizeSlug(rawSlug);

/* ---------------- FETCH POST ---------------- */
const { data: post, error } = await supabase
  .from("posts")
  .select(`
    title,
    slug,
    description,
    featured_image,
    content_blocks,
    status
  `)
  .ilike("slug", decodedSlug)
  .limit(1)
  .maybeSingle();

/* ---------------- DEBUG LOGS ---------------- */
console.log("URL slug:", rawSlug);
console.log("Normalized slug:", decodedSlug);
console.log("DB post:", post);
console.log("DB error:", error);

/* ---------------- 404 ---------------- */
if (!post) {
  return Astro.redirect("/404");
}

/* ---------------- META ---------------- */
const pageURL = new URL(Astro.url.pathname, Astro.site).toString();
const imageURL = post.featured_image || "https://duolb.com/default-og.jpg";
---

<Layout title={post.title} description={post.description}>

  {/* ================== STRUCTURED DATA ================== */}

  <!-- Article Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": post.description,
    "image": imageURL,
    "author": {
      "@type": "Organization",
      "name": "Duolb Editorial"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Duolb",
      "logo": {
        "@type": "ImageObject",
        "url": "https://duolb.com/logo.png"
      }
    },
    "mainEntityOfPage": pageURL,
    "datePublished": post.created_at || new Date().toISOString(),
    "dateModified": post.updated_at || post.created_at || new Date().toISOString()
  })} />

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Startseite",
        "item": "https://duolb.com/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "https://duolb.com/posts"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": post.title,
        "item": pageURL
      }
    ]
  })} />

  {/* ================== VISIBLE PAGE ================== */}

  <main class="max-w-4xl mx-auto px-6 lg:px-8">

    {post.featured_image && (
      <div class="post-hero mb-10">
        <img
          src={post.featured_image}
          alt={post.title}
          class="w-full h-auto rounded-2xl shadow-sm"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    )}

    <article class="post-article prose prose-lg max-w-none">

      <header class="mb-10">
        <h1 class="post-title">{post.title}</h1>

        {post.description && (
          <p class="text-xl text-gray-500 mt-4">
            {post.description}
          </p>
        )}

        <div class="text-sm text-gray-400 mt-4">
          <span>Von Duolb Redaktion</span>
          <span class="mx-2">â€¢</span>
          <time datetime={post.created_at}>
            {new Date(post.created_at || Date.now()).toLocaleDateString("de-DE")}
          </time>
        </div>
      </header>

      <div class="post-content" set:html={post.content_blocks} />

    </article>

  </main>

  <Footer />

</Layout>

    <main class="post-container">
      {post.featured_image && (
        <div class="post-hero">
          <img src={post.featured_image} alt={post.title} />
        </div>
      )}

      <article class="post-article">
        <h1 class="post-title">{post.title}</h1>
        <div class="post-content" set:html={post.content_blocks} />
      </article>
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  /* ================= HERO IMAGE ================= */
  .post-hero {
    width: 100%;
    max-width: 1400px;
    margin: 3rem auto 2rem auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: center; /* centers the image */
  }

  .post-hero img {
    width: 100%;
    max-width: 1100px; /* keeps it elegant on big screens */
    height: 500px;
    object-fit: cover;
    border-radius: 28px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    display: block;
  }

  /* Soft gradient glow behind hero for premium feel */
  .post-hero::before {
    content: "";
    position: absolute;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(149,142,9,0.15) 0%, rgba(255,255,255,0) 70%);
    filter: blur(60px);
    z-index: -1;
    top: 10%;
  }

  /* ================= ARTICLE CONTAINER ================= */
  .post-article {
    max-width: 1020px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem 1.5rem;
  }

  /* ================= TITLE ================= */
  .post-title {
    font-family: 'Inter', sans-serif;
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 900;
    color: #111;
    text-align: center;
    line-height: 1.1;
    margin: 2.5rem 0 3rem 0;
    letter-spacing: -0.02em;
  }

  .post-title::after {
    content: "";
    display: block;
    width: 90px;
    height: 6px;
    background: linear-gradient(90deg, #958e09, #c9c24d);
    margin: 1.5rem auto 0;
    border-radius: 10px;
  }

  /* ================= CONTENT TYPOGRAPHY ================= */
  .post-content {
    font-size: 1.15rem;
    line-height: 1.9;
    color: #333;
  }

  .post-content p {
    margin-bottom: 1.6rem;
  }

  .post-content h2,
  .post-content h3 {
    font-weight: 800;
    margin-top: 3rem;
    margin-bottom: 1.2rem;
    line-height: 1.3;
  }

  .post-content img {
    width: 100%;
    border-radius: 18px;
    margin: 2.5rem 0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  }

  /* ================= MOBILE ================= */
  @media (max-width: 768px) {
    .post-hero img {
      height: 260px;
      border-radius: 20px;
    }

    .post-article {
      padding: 0 1.2rem 3rem 1.2rem;
    }
  }
</style>
