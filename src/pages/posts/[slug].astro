---
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/Footer.astro";
import PostCard from "../../components/PostCard.astro";
import { supabase } from "../../lib/supabase";

export const prerender = false;

function normalizeSlug(str = "") {
  return decodeURIComponent(str).trim().toLowerCase();
}

function toTimestamp(value = "") {
  const parsed = Date.parse(value);
  return Number.isNaN(parsed) ? 0 : parsed;
}

const titleStopWords = new Set([
  "der",
  "die",
  "das",
  "und",
  "oder",
  "mit",
  "für",
  "von",
  "den",
  "dem",
  "des",
  "ein",
  "eine",
  "einer",
  "einem",
  "im",
  "in",
  "am",
  "an",
  "zu",
  "auf",
  "bei",
  "aus",
  "ist",
  "sind",
  "wie",
  "was",
]);

function titleTokens(input = "") {
  return input
    .toLowerCase()
    .normalize("NFD")
    .replace(/[\u0300-\u036f]/g, "")
    .replace(/[^a-z0-9\s]/g, " ")
    .split(/\s+/)
    .filter((token) => token.length > 2 && !titleStopWords.has(token));
}

const { slug: rawSlug } = Astro.params;
const decodedSlug = normalizeSlug(rawSlug || "");

const { data: post, error } = await supabase
  .from("posts")
  .select(`*`)
  .ilike("slug", decodedSlug)
  .maybeSingle();

if (error) return new Response(`Database Error: ${error.message}`, { status: 500 });
if (!post) return Astro.redirect("/404");

const currentTitleTokenSet = new Set(titleTokens(post.title ?? ""));

const { data: relatedRaw, error: relatedError } = await supabase
  .from("posts")
  .select("title, slug, featured_image, created_at")
  .neq("slug", post.slug)
  .order("created_at", { ascending: false })
  .limit(24);

if (relatedError) {
  console.error("Related posts error:", relatedError.message);
}

const relatedPosts = (relatedRaw || [])
  .map((candidate) => {
    const candidateTokens = new Set(titleTokens(candidate.title ?? ""));
    let overlapScore = 0;

    for (const token of currentTitleTokenSet) {
      if (candidateTokens.has(token)) overlapScore += 1;
    }

    return { ...candidate, overlapScore };
  })
  .sort((a, b) => {
    if (b.overlapScore !== a.overlapScore) return b.overlapScore - a.overlapScore;
    return toTimestamp(b.created_at) - toTimestamp(a.created_at);
  })
  .slice(0, 3);

const pageURL = `https://duolb.com${Astro.url.pathname}`;

const description =
  post.description?.slice(0, 155) ||
  "Expertenanalyse zu moderner Akne-Behandlung, medizinischer Hautpflege und High-End Beauty Technologien.";

Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=0, s-maxage=600, stale-while-revalidate=86400"
)
---

<Layout
  title={`${post.title} | Duolb Beauty`}
  description={description}
  canonical={pageURL}
  image={post.featured_image}
  type="article"
>

  <main class="max-w-4xl mx-auto px-6 lg:px-8 py-12">
    
    {post.featured_image && (
      <div class="post-hero mb-10">
        <img
          src={post.featured_image}
          alt={post.title}
          width="1200"
          height="630"
          class="w-full h-auto rounded-2xl shadow-lg"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    )}

    <article class="prose prose-lg max-w-none">
      <header class="mb-10">
        <h1 class="text-4xl md:text-5xl font-black leading-tight">
          {post.title}
        </h1>

        <div class="text-sm text-[var(--color-medium-gray)] mt-6 flex items-center gap-2">
          <span>Duolb Redaktion</span>
          <span>•</span>
          <time datetime={post.created_at}>
            {new Date(post.created_at).toLocaleDateString("de-DE")}
          </time>
        </div>
      </header>

      <div class="post-content" set:html={post.content_blocks} />
    </article>

    {relatedPosts.length > 0 && (
      <section class="mt-16 pt-12 border-t border-[rgba(230,226,221,0.35)]" aria-label="Ähnliche Beiträge">
        <div class="flex flex-wrap items-end justify-between gap-4 mb-8">
          <h2 class="text-3xl font-serif text-[var(--color-deep-slate)]">Ähnliche Beiträge</h2>
          <a
            href="/posts"
            class="text-xs font-bold uppercase tracking-[0.2em] text-[var(--color-terracotta)] transition-colors hover:text-[var(--color-gentle-gold)]"
          >
            Alle Beiträge ansehen
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {relatedPosts.map((relatedPost) => (
            <PostCard post={relatedPost} />
          ))}
        </div>
      </section>
    )}
  </main>

  <Footer />

  <!-- Article Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.title,
    "description": description,
    "image": [post.featured_image],
    "datePublished": post.created_at,
    "dateModified": post.updated_at || post.created_at,
    "author": {
      "@type": "Organization",
      "name": "Duolb Redaktion"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Duolb",
      "logo": {
        "@type": "ImageObject",
        "url": "https://res.cloudinary.com/dc0ax30om/image/upload/v1769795884/Capture_d_%C3%A9cran_2026-01-30_185740_yhkku3.png"
      }
    },
    "mainEntityOfPage": pageURL
  })} />
</Layout>


<style is:global>
  /* ================= HERO IMAGE ================= */
  .post-hero {
    width: 100%;
    max-width: 1400px;
    margin: 3rem auto 2rem auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: center; /* centers the image */
  }

  .post-hero img {
    width: 100%;
    max-width: 1100px; /* keeps it elegant on big screens */
    height: 500px;
    object-fit: cover;
    border-radius: 28px;
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.12);
    display: block;
  }

  /* Soft gradient glow behind hero for premium feel */
  .post-hero::before {
    content: "";
    position: absolute;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(149,142,9,0.15) 0%, rgba(255,255,255,0) 70%);
    filter: blur(60px);
    z-index: -1;
    top: 10%;
  }

  /* ================= ARTICLE CONTAINER ================= */
  .post-article {
    max-width: 1020px;
    margin: 0 auto;
    padding: 0 1.5rem 4rem 1.5rem;
  }

  /* ================= TITLE ================= */
  .post-title {
    font-family: var(--font-heading);
    font-size: clamp(2.2rem, 4vw, 3.5rem);
    font-weight: 900;
    color: var(--color-deep-slate);
    text-align: center;
    line-height: 1.1;
    margin: 2.5rem 0 3rem 0;
    letter-spacing: -0.02em;
  }

  .post-title::after {
    content: "";
    display: block;
    width: 90px;
    height: 6px;
    background: linear-gradient(90deg, var(--color-gentle-gold), var(--color-terracotta));
    margin: 1.5rem auto 0;
    border-radius: 10px;
  }

  /* ================= CONTENT TYPOGRAPHY ================= */
  .post-content {
    font-size: 1.15rem;
    line-height: 1.9;
    color: var(--color-charcoal);
  }

  .post-content p {
    margin-bottom: 1.6rem;
  }

  .post-content h2,
  .post-content h3 {
    font-weight: 800;
    margin-top: 3rem;
    margin-bottom: 1.2rem;
    line-height: 1.3;
  }

  .post-content img {
    width: 100%;
    border-radius: 18px;
    margin: 2.5rem 0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.08);
  }

  /* ================= MOBILE ================= */
  @media (max-width: 768px) {
    .post-hero img {
      height: 260px;
      border-radius: 20px;
    }

    .post-article {
      padding: 0 1.2rem 3rem 1.2rem;
    }
  }
</style>



