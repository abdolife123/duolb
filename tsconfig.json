{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "types": ["astro/client"],

    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/env.d.ts",
    "**/*"
  ],
  "exclude": ["dist"]
}
